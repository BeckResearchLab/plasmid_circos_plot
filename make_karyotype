ssh dacb@128.208.236.235 "cat /work/data/NCBI_plasmids/plasmid/plasmid.1.genomic.gbff /work/data/NCBI_plasmids/plasmid/plasmid.2.genomic.gbff /work/data/NCBI_plasmids/plasmid/plasmid.3.genomic.gbff" | awk '/^LOCUS/ { printf("chr - %s %s %d %d", $2, $2, 1, $3); } /^  ORGANISM/ { printf(" %s\n", color($2)); } function color(species) { n = split(species, tax, " "); if (tax[1] == "Escherichia") rgb ="165,0,38"; else if (tax[1] == "Klebsiella") rgb ="215,48,39"; else if (tax[1] == "Staphylococcus") rgb ="244,109,67"; else if (tax[1] == "Salmonella") rgb ="253,174,97"; else if (tax[1] == "Acinetobacter") rgb ="254,224,144"; else if (tax[1] == "Yersinia") rgb ="49,54,149"; else if (tax[1] == "Enterococcus") rgb ="224,243,248"; else if (tax[1] == "Enterobacter") rgb ="171,217,233"; else if (tax[1] == "Shigella") rgb ="116,173,209"; else if (tax[1] == "Citrobacter") rgb ="69,117,180"; else rgb ="255,255,191"; return rgb; }' 
